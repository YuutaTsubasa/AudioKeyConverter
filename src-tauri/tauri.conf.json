{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audio Key Converter",
  "version": "0.1.0",
  "identifier": "com.yuutatsubasa.audiokeyconverter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Audio Key Converter",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
